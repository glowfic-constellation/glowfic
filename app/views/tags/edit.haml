- content_for :breadcrumbs do
  = link_to "Tags", tags_path
  &raquo;
  = link_to @tag.type.pluralize.titlecase, tags_path(view: @tag.type)
  &raquo;
  = link_to @tag.name, tag_path(@tag)
  &raquo;
  %b Edit

= form_for @tag.becomes(Tag) do |f|
  - f.object = @tag.becomes(@tag.class) # handles the STI with Tag/Setting/ContentWarning properly
  %table.form-table.alternating
    %thead
      %tr
        %th.editor-title{colspan: 2} Edit #{@tag.type.titlecase}
    = render 'editor', f: f
