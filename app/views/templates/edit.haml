- content_for :breadcrumbs do
  = link_to "Characters", user_characters_path(current_user)
  &raquo;
  = link_to @template.name, @template
  &raquo;
  %b Edit

= form_for @template, url: @template, method: :put do |f|
  %table.form-table
    %thead
      %tr
        %th.editor-title{colspan: 2} Edit Template
    = render 'editor', f: f
