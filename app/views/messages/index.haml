= form_tag mark_messages_path, method: :post do
  %table.alternating
    %thead
      = render @view
      - if @messages.present?
        %tr
          %th.sub.width-15
          %th.sub Subject
          %th.sub= @view == 'inbox' ? 'Sender' : 'Recipient'
          %th.sub Sent
          %th.sub#select-all-cell= check_box_tag :select_all, false
    %tbody
      - if @messages.empty?
        %tr
          %td.centered.padding-10 â€” No messages yet â€”
      - else
        - @messages.each do |message|
          %tr.message-row
            - bold = @view == 'inbox' && message.unread? ? 'bold' : ''
            %td.padding-left-5{class: bold}= # just padding
            %td{class: bold}
              = link_to message.unempty_subject, message_path(message)
              - if message.num_in_thread.to_i > 1
                (#{message.num_in_thread})
            %td{class: bold}
              - if @view == 'inbox'
                = message_sender(message)
              - else
                = user_link(message.recipient)
            %td{class: bold}= pretty_time(message.last_in_thread.created_at)
            %td{class: bold}= check_box_tag :"marked_ids[]", message.id, false, class: 'select-all-box', id: nil
        %tr
          %td.right-align.padding-5{colspan: 5}
            - if @view == 'inbox'
              = submit_tag "Mark Read", class: 'button'
              = submit_tag "Mark Unread", class: 'button'
            = submit_tag "Delete", class: 'button', data: { confirm: "Are you sure you want to delete these messages?" }
    - if @messages.total_pages > 1
      %tfoot
        %tr
          %td{colspan: 5}= render 'posts/paginator', paginated: @messages
