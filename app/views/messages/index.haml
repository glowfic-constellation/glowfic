= form_with url: mark_messages_path, method: :post do |f|
  %table
    %thead
      = render @view
      - if @messages.present?
        %tr
          %th.sub.width-15
          %th.sub Subject
          %th.sub= @view == 'inbox' ? 'Sender' : 'Recipient'
          %th.sub Sent
          %th.sub#select-all-cell= check_box_tag :select_all, nil, class: 'check-all', data: { check_box_name: "marked_ids[]" }
    %tbody
      - if @messages.empty?
        %tr
          %td.centered.padding-10.even â€” No messages yet â€”
      - else
        - @messages.each do |message|
          %tr.message-row
            - klass = cycle('even', 'odd')
            - klass += ' bold' if @view == 'inbox' && message.unread?
            %td.padding-left-5{class: klass}= # just padding
            %td{class: klass}
              = link_to message.unempty_subject, message
              - if message.num_in_thread.to_i > 1
                (#{message.num_in_thread})
            %td{class: klass}
              - if @view == 'inbox'
                = message_sender(message)
              - else
                = user_link(message.recipient)
            %td{class: klass}= pretty_time(message.last_in_thread.created_at)
            %td{class: klass}= f.check_box :"marked_ids[]", value: message.id, class: 'checkbox check-all-item', id: nil
        %tr
          %td.right-align.padding-5{colspan: 5, class: cycle('even', 'odd')}
            - if @view == 'inbox'
              = f.submit "Mark Read", class: 'button'
              = f.submit "Mark Unread", class: 'button'
            = f.submit "Delete", class: 'button', data: { confirm: "Are you sure you want to delete these messages?" }
    - if @messages.total_pages > 1
      %tfoot
        %tr
          %td{colspan: 5}= render 'posts/paginator', paginated: @messages
