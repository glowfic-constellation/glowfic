- content_for :breadcrumbs do
  = link_to 'Inbox', messages_path
  - if @message.thread_id
    &raquo;
    = link_to @message.unempty_subject, message_path(@message.first_thread)
    &raquo;
    %b New Reply
  - else
    &raquo;
    %b New Message

.content-header
  %span= @message.unempty_subject
- if @messages.present?
  = render @messages, all_collapse: true
= render @message
%br
= render 'editor'
