- content_for :breadcrumbs do
  = link_to t('messages.inbox.title'), messages_path
  - if @message.thread_id
    &raquo;
    = link_to @message.unempty_subject, @message.first_thread
    &raquo;
    %b= t('messages.reply.breadcrumbs')
  - else
    &raquo;
    %b= t('messages.new.breadcrumbs')

.content-header
  %span= @message.unempty_subject
- if @messages.present?
  = render @messages, all_collapse: true
= render @message
%br
= render 'editor'
