= form_tag login_path, method: :post do
  .form-table
    .editor-title Sign In
    #username-row
      .sub.vtop= label_tag :username
      .even= text_field_tag :username, params[:username], placeholder: "Username", autocomplete: 'username'
    #password-row
      .sub.vtop= label_tag :password
      .odd
        = password_field_tag :password, params[:password], placeholder: "Password", autocomplete: 'current-password'
        #remember-link= link_to "Forgot Password?", new_password_reset_path
    #remember-me
      .sub.vtop= label_tag :remember_me
      .even= check_box_tag :remember_me
    .form-table-ender= submit_tag "Sign In", class: 'button'
