= form_tag password_resets_path, method: :post do
  %table.form-table
    %tr
      %th.centered{colspan: 2} Request Password Reset
    %tr
      %th.sub Username
      %td.even= text_field_tag :username, params[:username], placeholder: "Username", class: 'text'
    %tr
      %th.sub Email
      %td.odd= text_field_tag :email, params[:email], placeholder: "Email address", class: 'text'
    %tr
      %th.centered.subber{colspan: 2}= submit_tag "Reset Password", class: 'button'
