%tbody
  %tr
    %th.sub= f.label :name
    %td.even= f.text_field :name, placeholder: true, class: 'text'
  %tr
    %th.sub= t('.label.owner')
    %td.odd= @index.user.deleted? ? t('users.deleted') : @index.user.username
  %tr
    %th.sub= f.label :privacy
    %td.even
      = f.select :privacy, options_from_collection_for_select(index_privacy_settings.to_a, :second, :first, @index.privacy)
  %tr
    %th.sub.vtop= t('.label.editors')
    %td.odd
      = f.radio_button :authors_locked, true, class: 'checkbox'
      = f.label :authors_locked, value: true
      %br
      = f.radio_button :authors_locked, false, class: 'checkbox'
      = f.label :authors_locked, value: 'false'
  %tr
    %th.sub.vtop= f.label :description
    %td.even= f.text_area :description
%tfoot
  %tr
    %th.form-table-ender{colspan: 2}= f.submit class: 'button'
