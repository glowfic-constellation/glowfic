%tbody.alternating
  %tr
    %th.sub Name
    %td= f.text_field :name, placeholder: "Index Name", class: 'text'
  %tr
    %th.sub Owner
    %td= @index.user.deleted? ? '(deleted user)' : @index.user.username
  %tr
    %th.sub Privacy
    %td
      = f.select :privacy, options_from_collection_for_select(index_privacy_settings.to_a, :second, :first, @index.privacy)
  %tr
    %th.sub.vtop Editors
    %td
      = f.radio_button :authors_locked, true, class: 'checkbox'
      = f.label :authors_locked, 'Just me', value: true
      %br
      = f.radio_button :authors_locked, false, class: 'checkbox'
      = f.label :authors_locked, 'Any Constellation user', value: false
  %tr
    %th.sub.vtop Description
    %td= f.text_area :description
%tfoot
  %tr
    %th.form-table-ender{colspan: 2}= submit_tag "Save", class: 'button'
