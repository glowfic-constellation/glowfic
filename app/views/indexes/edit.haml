- content_for :breadcrumbs do
  = link_to "Indexes", indexes_path
  &raquo;
  = link_to @index.name, @index
  &raquo;
  %b Edit

= form_for @index, method: :put do |f|
  %table.form-table
    %thead
      %tr
        %th.editor-title{colspan: 2} Edit Index
    = render 'editor', f: f

%br
%br

- content_for :reorder_title do
  Organize Index Sections
  = link_to new_index_section_path params: { index_id: @index.id } do
    .link-box.action-new + New Section
= render 'continuities/reorder_sections', sections: @index_sections

%br
= render 'continuities/reorder_posts', unsectioned_posts: @unsectioned_posts, id: :index_post_id, klass: IndexPost
