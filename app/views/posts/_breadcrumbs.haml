- content_for :breadcrumbs do
  = link_to "Continuities", continuities_path
  &raquo;
  = link_to post.board.name, post.board
  - if post.section
    &raquo;
    = link_to post.section.name, post.section
  &raquo;
  - if local_assigns[:subtitle]
    = link_to post.subject, post_path(post)
    &raquo;
    %b= subtitle
  - else
    %b= post.subject
