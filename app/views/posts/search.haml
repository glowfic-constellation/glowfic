= render 'search/breadcrumbs'

%table.search-collapsible
  %thead
    %tr
      %th.search-params-header
        Search Posts
        - if @search_results
          = '- ' + @search_results.total_entries.to_s + ' results'
      %th.search-results-header
        - if @search_results
          = render 'paginator', paginated: @search_results
  %tbody
    %tr
      %td.search-box
        = form_with url: search_posts_path, method: :get do |f|
          %table.search-form
            %tr
              %td.width-70= f.label :board_id, 'Continuity'
              %td= f.select :board_id, options_from_collection_for_select(@board || [], :id, :name, params[:board_id]),
                class: 'chosen-select', prompt: '— Choose Continuity —'
            %tr
              %td= f.label :author_id
              %td= f.select :author_id, options_from_collection_for_select(@user || [], :id, :username, params[:author_id]),
                class: 'chosen-select', prompt: '— Choose Author —', multiple: true
            %tr
              %td= f.label :character_id
              %td= f.select :character_id, options_from_collection_for_select(@character || [], :id, :selector_name, params[:character_id]),
                prompt: '— Choose Character —'
            %tr
              %td= f.label :setting_id
              %td= f.select :setting_id, options_from_collection_for_select(@setting || [], :id, :name, params[:setting_id]),
                prompt: '— Choose Setting —'
            %tr
              %td= f.label :subject
              %td= f.text_field :subject, value: params[:subject], style: 'width: 100%; margin: 5px 0px;'
            %tr
              %td Acronym
              %td.padding-5
                = check_box_tag :abbrev, true, params[:abbrev].present?, { class: 'vmid no-margin', style: 'margin-bottom: 3px;' }
                = label_tag :abbrev, 'Search for acronym'
            %tr
              %td Completed
              %td.padding-5
                = f.check_box :completed, checked: params[:completed], class: 'vmid no-margin', style: 'margin-bottom: 3px;'
                = f.label :completed, "Completed Only"
            %tr
              %td.centered{colspan: 2}= f.submit "Search", class: 'button'
      %td.vtop#search_results
        - if @search_results.present?
          %table
            %thead
              %tr
                %th.sub
                %th.sub Thread
                %th.sub Continuity
                %th.sub Authors
                %th.sub Replies
                %th.sub Last Updated
            %tbody
              = render partial: 'posts/list_item', collection: @search_results, as: :post

  - if @search_results && @search_results.total_pages > 1
    %tfoot
      %tr
        %th.search-params-header.empty
        %th.search-results-header= render 'paginator', paginated: @search_results
