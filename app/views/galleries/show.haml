%table
  = render 'single', gallery: @gallery, hide_minmax: true, icons: icons, is_owner: @user == current_user, skip_forms: false
  - content_for :breadcrumbs do
    - if @user.id == current_user.try(:id)
      = link_to Gallery.model_name.human(count: 2), user_galleries_path(current_user)
    - else
      = user_link(@user)
      - unless @user.deleted?
        &raquo;
        = link_to t('galleries.index.title.user', name: @user.username), user_galleries_path(@user)
    &raquo;
    %b= @gallery ? @gallery.name : t('.title.none')
