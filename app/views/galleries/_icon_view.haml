-# locals: ( icons:, gallery:, is_owner: false, skip_forms: false )

= form_with url: delete_multiple_icons_path, method: :delete do |f|
  = render partial: 'galleries/icon_item', collection: icons, locals: { is_owner: is_owner, skip_forms: skip_forms, f: f }
  - if is_owner && !skip_forms
    .clear.centered.icons-remove
      - if gallery
        = f.hidden_field :gallery_id, value: gallery.id
        = f.submit "- Remove selected icons from gallery", name: 'gallery_delete'
      = f.submit "x Delete selected icons permanently", data: { confirm: "Are you sure? These icons will be gone from the site!" }
