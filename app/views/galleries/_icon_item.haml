-# locals: ( icon_item:, f:, is_owner: false, skip_forms: false )

- icon_id, keyword, url = icon_item
.gallery-icon
  = link_to icon_path(id: icon_id) do
    = icon_mem_tag url, keyword
    %br
    %span.icon-keyword= keyword
  - if is_owner && !skip_forms
    .select-button= f.check_box :"marked_ids[]", value: icon_id, id: nil
