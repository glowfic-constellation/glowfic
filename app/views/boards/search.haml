= render 'search/breadcrumbs'

%table.search-collapsible
  %thead
    %tr
      %th.search-params-header
        Search Continuities
        - if @search_results
          = "- #{@search_results.total_entries} results"
      %th.search-results-header
        - if @search_results
          = render 'posts/paginator', paginated: @search_results, no_per: true
  %tbody
    %tr
      %td.search-box
        = form_with url: search_continuities_path, method: :get do |f|
          %table.search-form
            %tr
              %td.width-70= f.label :name
              %td= f.text_field :name, value: params[:name], style: 'width: 100%; margin: 5px 0px; box-sizing: border-box;'
            %tr
              %td Acronym
              %td.padding-5
                = f.check_box :abbrev, checked: params[:abbrev], class: 'vmid no-margin', style: 'margin-bottom: 3px;'
                = f.label :abbrev, 'Search for acronym'
            %tr
              %td= f.label :author_id
              %td= f.select :author_id, options_from_collection_for_select(@user || [], :id, :username,
                params[:author_id]), class: 'chosen-select', prompt: '— Choose Author —', multiple: true
            %tr
              %td.centered{colspan: 2}= f.submit "Search", class: 'button'
      %td.vtop
        - if @search_results.present?
          %table
            %thead
              %tr
                %th.sub Name
                %th.sub Authors
                %th.sub Last Updated
            %tbody
              = render partial: 'list_item', collection: @search_results, as: :board

  - if @search_results && @search_results.total_pages > 1
    %tfoot
      %tr
        %th.search-params-header.empty
        %th.search-results-header= render 'posts/paginator', paginated: @search_results, no_per: true
