%tbody
  %tr
    %th.sub= f.label :name
    %td.even= f.text_field :name, placeholder: true, class: 'text'
  %tr
    %th.sub= t('.creator')
    %td.odd= @board.creator.username
  %tr
    %th.sub= f.label :coauthor_ids
    %td.even
      = f.collection_select(:coauthor_ids, @coauthors, :id, :username, { selected: @board.coauthors.pluck(:user_id) }, { multiple: true })
  %tr
    %th.sub= f.label :cameo_ids
    %td.odd
      = f.collection_select(:cameo_ids, @cameos, :id, :username, { selected: @board.cameos.pluck(:user_id) }, { multiple: true })
  %tr
    %th.sub= f.label :authors_locked, t('.label.locked.short')
    %td.even
      = f.check_box :authors_locked, class: 'vmid', checked: @board.authors_locked
      = f.label :authors_locked, t('.label.locked.long')
  %tr
    %th.sub.vtop= f.label :description
    %td.odd= f.text_area :description
%tfoot
  %tr
    %th.form-table-ender{colspan: 2}= f.submit class: 'button'
