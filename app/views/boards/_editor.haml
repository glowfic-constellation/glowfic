%tbody
  %tr
    %th.sub Name
    %td.even= f.text_field :name, placeholder: "Continuity Name", class: 'text'
  %tr
    %th.sub Creator
    %td.odd= @continuity.creator.username
  %tr
    %th.sub Coauthors
    %td.even
      = f.collection_select(:coauthor_ids, @coauthors, :id, :username, { selected: @continuity.coauthors.pluck(:user_id) }, { multiple: true })
  %tr
    %th.sub Cameos
    %td.odd
      = f.collection_select(:cameo_ids, @cameos, :id, :username, { selected: @continuity.cameos.pluck(:user_id) }, { multiple: true })
  %tr
    %th.sub Locked?
    %td.even
      = f.check_box :authors_locked, class: 'vmid', checked: @continuity.authors_locked
      = f.label :authors_locked, 'Only allow authors to create new posts in this continuity', class: 'no-margin'
  %tr
    %th.sub.vtop Description
    %td.odd= f.text_area :description
%tfoot
  %tr
    %th.form-table-ender{colspan: 2}= submit_tag "Save", class: 'button'
