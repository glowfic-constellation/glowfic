- content_for :breadcrumbs do
  = link_to Character.model_name.human(count: 2), user_characters_path(current_user)
  - if @character.template
    &raquo;
    = link_to @character.template.name, template_path(@character.template)
  &raquo;
  = link_to @character.name, @character
  &raquo;
  %b= t('breadcrumbs.replace')

- content_for :disclaimer do
  %tr
    %td.odd.centered{colspan: 2}
      .details= t('.icons_disclaimer')

- content_for :aliases do
  - if @character.aliases.exists?
    - collection = options_from_collection_for_select(@character.aliases, :id, :name)
    = select_tag :orig_alias, (options_for_select({ t('.prompt.alias.all') => 'all' }, 'all') + collection), prompt: t('.prompt.alias.none')

- content_for :options do
  = select_tag :icon_dropdown, options_for_select(@alt_dropdown, @alt.try(:id)), prompt: t('.prompt.character')
  = select_tag :alias_dropdown, options_from_collection_for_select(@alt.try(:aliases), :id, :name), prompt: t('.prompt.alias.none'), class: ('hidden' unless @alt.try(:aliases).present?)

= form_for @character, url: do_replace_character_path(@character), method: :post do
  = render 'global/replace', obj: @character, name: @character.name, icon: @character.default_icon, alt_icon: @alts.first.try(:default_icon), is_character: true
