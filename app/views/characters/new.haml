- content_for :breadcrumbs do
  = link_to "You", user_path(current_user)
  &raquo;
  = link_to "Your Characters", user_characters_path(current_user)
  &raquo;
  %b Create New
= form_with model: @character, method: :post do |f|
  = f.hidden_field :default_icon_id
  .character-form
    .form-table#character-editor
      .editor-title New Character
      = render 'editor', f: f

  = render 'icon_selector'
