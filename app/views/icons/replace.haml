- content_for :breadcrumbs do
  = link_to "Galleries", user_galleries_path(current_user)
  &raquo;
  = link_to @icon.keyword, @icon
  &raquo;
  %b= link_to 'Replace', replace_icon_path(@icon)

- content_for :options do
  = f.select :icon_dropdown, options_for_select(@alts.map { |i| [i.keyword, i.id] }, @alts.first.try(:id)), prompt: "No Icon"

= form_with model: @icon, url: do_replace_icon_path(@icon), scope: '', method: :post do |f|
  = render 'global/replace', obj: @icon, name: @icon.keyword, icon: @icon, alt_icon: @alts.first, f: f
