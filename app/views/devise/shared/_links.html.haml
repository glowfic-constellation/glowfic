- if controller_name != 'sessions'
  %div= link_to "Log in", new_session_path(resource_name)
- if devise_mapping.registerable? && controller_name != 'registrations'
  %div= link_to "Sign up", new_registration_path(resource_name)
-# - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
-#   = link_to "Unlock your account", new_unlock_path(resource_name)
-#   %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && !current_page?(new_session_path(resource_name))
  %div= link_to "Forgot your password?", new_password_path(resource_name)
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %div= link_to "Didn't get a confirmation email?", new_confirmation_path(resource_name)
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    %div= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }
