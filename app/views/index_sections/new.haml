- content_for :breadcrumbs do
  = link_to "Indexes", indexes_path
  &raquo;
  = link_to @section.index.name, @section.index
  &raquo;
  %b New Section


= form_with model: @section, method: :post do |f|
  .form-table#index-section-editor
    .editor-title Create #{@index.try(:name)} Section
    = render 'editor', f: f
